#include <iostream>
using namespace std;
int main(){
	int niz[5];
	cout << "unesi prvi niz:" << endl;
	for (int i = 0; i < 5; i++) {
		cin >> niz[i];
	}
	cin.ignore();
	auto parnost = [](int b1) {return b1 % 2 == 0; };
	auto udvostruci = [](int b1) {return b1 * 2; };
	auto prepolovi = [](int b1) {return b1 / 2; };
	int suma1 = 0;
	int produkt = 1;
	auto zbroj = [&](int b1) {return suma1 += b1; };
	auto umnozak = [&](int b1) {return produkt *= b1; };

		for (int i = 0; i <5; i++) {
		parnost(niz[i]);
		if (parnost(niz[i]) == 1) {
			niz[i]=prepolovi(niz[i]);
			cout << niz[i] << " ";

		}
		else {
			niz[i]=udvostruci(niz[i]);
			cout << niz[i] << " ";

		}
		
	}
	int niz1[5];
	cout << "unesi drugi niz:" << endl;
	for (int i = 0; i < 5; i++) {
		cin >> niz1[i];
	}
	cin.ignore();
	for (int i = 0; i < 5; i++) {
		parnost(niz1[i]);
		if (parnost(niz1[i])) {
			zbroj(niz1[i]);
			

		}
		else {
			umnozak(niz1[i]);

		}

	}
	cout << produkt << endl;
	cout << suma1 << endl;



	return 0;
}
