#include <iostream>
#include <string>
#include <vector>
#include <algorithm>
#include <cctype>
using namespace std;

void funkcija(vector<int> v) {
	
	replace_if(v.begin(), v.end(), [](int x) {
			return x % 2 == 0;
		},0);
	transform(v.begin(), v.end(), v.begin(), [](int x) {
		if( x % 2 != 0) {
			return x * 2;
		}
		});
	for (int x : v) {
		cout << x << " ";
	}
}
int main(){
	vector<int> v = { 0,2,3,0,5,0 };
	funkcija(v);
	return 0;
}
