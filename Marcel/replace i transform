#include<string>
#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;


void funkcija(vector<int>& brojevi) {

	transform(brojevi.begin(), brojevi.end(), brojevi.begin(), [](int a) {
		if (a % 2 != 0) {
			return a*2;
		}
		else {
			return a;
		}
		});

	replace(brojevi.begin(), brojevi.end(), 0, 2);
	

	for (int b : brojevi) {
		cout << b << " ";
	}
}

int main() {
	vector<int> brojevi = { 1,2,3,4,0,5,0 };
	funkcija(brojevi);

	return 0;
}
