#include<iostream>
#include<string>
#include<vector>
#include<algorithm>
#include<cstdlib>
#include<ctime>
using namespace std;

class Knjiga {
public:
	string naslov;
	string autor;

	Knjiga() {
		naslov = "";
		autor = "";
	}

	Knjiga(string a, string b) {
		naslov = a;
		autor = b;
	}

	void ispis(){
		cout << naslov << " - " << autor << endl;
	}
};

class Biblioteka {
private:
	Knjiga* knjige;
	int kapacitet;
	int broj;

public:

	Biblioteka() {
		kapacitet = 10;
		broj = 0;
		knjige = new Knjiga[kapacitet];
	}


	void dodajknjigu(Knjiga k) {
		if (broj < kapacitet){
			knjige[broj] = k;
			broj++;
		}
		else {
			cout << "Biblioteka je puna. " << endl;
		}
	}

	void ispisisve() {
		for (int i = 0; i < broj; i++) {
			knjige[i].ispis();
		}
	}
};


int main() {
	Biblioteka bib;

	bib.dodajknjigu(Knjiga("Alisa  u zemlji cudesa.", "Duje Reic"));
	bib.dodajknjigu(Knjiga("Cudoviste", "Laura Lagator"));
	bib.dodajknjigu(Knjiga("Ljepotica i Zvjer", "Marcel Jevdic"));
	bib.dodajknjigu(Knjiga("Snjeguljica i 1 patuljak", "Marko Barbir"));

	cout << "Sve knjige u biblioteci: " << endl;
	bib.ispisisve();



	return 0;
}
