#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

void funkcija(string& rjec) {
    auto it = find(rjec.begin(), rjec.end(), ' ');
    if (it != rjec.end()) {
        sort(rjec.begin(), it);
    }

    for (auto it1 = rjec.rbegin(); it1 != rjec.rend(); it1++) {
        if (*it1 == ' ') {
            cout << ' ';
        }
        else {
            cout << *it1;
        }
    }

}

int main() {
    string rjec = "hello world";
    funkcija(rjec);
    return 0;
}
